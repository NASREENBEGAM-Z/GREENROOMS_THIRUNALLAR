# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Neon DB)
DATABASE_URL="postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/greenguesthouse?sslmode=require"

# Frontend URL (for CORS)
FRONTEND_URL=https://greenguesthousethirunallar.com

# JWT Secret (for authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for booking confirmations and contact replies)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Cloud Storage (for images)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SESSION_SECRET=your-session-secret-key 